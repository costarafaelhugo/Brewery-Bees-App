<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:contentInsetStartWithNavigation="50dp"
        android:navigationIcon="@drawable/beer_icon_toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/fontquicksandbold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/yellow_bees"
            android:textSize="20sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp">


            <ImageButton
                android:id="@+id/fav_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:src="@drawable/star_icon_toolbar"
                app:layout_constraintBottom_toBottomOf="@+id/heart_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/star_icon_toolbar" />

            <ImageButton
                android:id="@+id/heart_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="45dp"
                android:background="@color/black"
                android:src="@drawable/heart_icon_toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fav_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/heart_icon_toolbar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>
