<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="64dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    tools:showIn="@layout/fragmente_list_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/background_brewery_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginStart="-270dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView_name_brewery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/fontquicksandbold"
            android:text="Cervejaria Teste"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_brewery_size_evaluations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:drawableStart="@drawable/star_rate"
            android:text="5,0"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_brewery" />

        <TextView
            android:id="@+id/textView_brewery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:drawableStart="@drawable/point_background"
            android:text="Tipo"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_brewery" />

        <TextView
            android:id="@+id/textView_brewery_postal_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:drawableStart="@drawable/point_background"
            android:text="0,9Km"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_brewery" />

        <ImageView
            android:id="@+id/imageView_background_point_icon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:src="@drawable/share_icon"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_name_brewery" />

        <ImageView
            android:id="@+id/imageView_background_brewery_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="285dp"
            android:src="@drawable/heart_black_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageView_background_point_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>